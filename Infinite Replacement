#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define MOD 1000000007
typedef unsigned long long int ull;

int main() {
    ll t;
    cin>>t;
    while(t--)
    {
        string s,a;
        cin>>s>>a;
        ll ssize=s.size();
        ll asize=a.size();
        ll a1=0,a2=0;
        for(int i=0;i<asize;i++)
        {
            if(a[i]=='a')a1++;
        }
        if(a1==0)
        {
            ll ans = pow(2,ssize);
            cout<<ans<<endl;
        }
        else if(a1==1 && asize==1)
        {
            cout<<1<<endl;
        }
        else
        {
            cout<<-1<<endl;
        }
    }
}
