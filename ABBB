#include <bits/stdc++.h>
using namespace std;
#define ll long long int
#define MOD 1000000007
typedef unsigned long long int ull;

int main() {
    ll t;
    cin>>t;
    while(t--)
    {
        string s;
        cin>>s;
        ll cnt=0;
        for(int i=0;i<s.size();i++)
        {
            if(cnt && s[i]=='B')
            {
                cnt--;
            }
            else
            {
                cnt++;
            }
        }
        cout<<cnt<<endl;
    }
}
